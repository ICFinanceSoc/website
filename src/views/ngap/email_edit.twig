{% extends "ngap/skeleton" %}

{% block content %}
<div class="page-header">
	<h1>{% if title %}{{title}}{% else %}Emailing Members{% endif %} <small>{{data.title}}</small></h1>
</div>
<div class="edit-panel">
	<form method="POST">
		<div class="edit-input edit-subject">Subject: <input class="full-width" name="subject" type="text" value="{{data.subject}}"></div><br />
        <div class="edit-input edit-from-name">From <em>name</em>:<input name="frm_name" type="text" value="ICFS" </div>
		<div class="edit-input edit-from-address">From <em>address</em>: <input name="frm_adr" type="text" value="no-reply@financesociety.co.uk"></div><br />
		<textarea name="email_content" class='tinymce'>{{data.content}}</textarea>
		<input type="submit" class="btn btn-large btn-primary btn-save" value="Send"><br style="clear: both"/>
		</div>
	</form>
    <br style="clear:both" />     
    {%include "ngap/uploadFiles_mainPage" %}
</div>
{% endblock %}

{% block contentclass %} content-pageedit{% endblock %}

{% block srcpagejs %}
{% include "ngap/uploadFiles_src" %}
<script src="{{path('homepage')}}assets/js/vendor/tiny_mce/jquery.tinymce.js"> </script>{% endblock %} {# TinyMCE JS Source #}


